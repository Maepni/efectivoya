{
  "expo": {
    "name": "EfectivoYa",
    "slug": "efectivoya-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "efectivoya",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "updates": {
      "enabled": false
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1f1f1f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.efectivoya.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Necesitamos acceso a la cámara para tomar fotos del comprobante de depósito.",
        "NSPhotoLibraryUsageDescription": "Necesitamos acceso a tu galería para seleccionar el comprobante de depósito.",
        "NSPhotoLibraryAddUsageDescription": "Necesitamos permiso para guardar imágenes en tu galería.",
        "NSFaceIDUsageDescription": "Usa Face ID para ingresar a EfectivoYa de forma rápida y segura.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1f1f1f"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.efectivoya.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.svg",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-video",
      "expo-local-authentication",
      [
        "expo-image-picker",
        {
          "photosPermission": "Necesitamos acceso a tu galería para seleccionar el comprobante de depósito.",
          "cameraPermission": "Necesitamos acceso a la cámara para tomar fotos del comprobante de depósito."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7501c744-9f8c-4325-87a0-69ec20ce29e5"
      }
    }
  }
}
