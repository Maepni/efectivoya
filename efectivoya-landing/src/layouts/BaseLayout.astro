---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'EfectivoYa — Tu Dinero Al Instante',
  description = 'Billetera digital fintech para Perú. Recarga tu billetera, retira a tus cuentas y gestiona tu dinero sin complicaciones ni comisiones.',
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#201F1F" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts: Bebas Neue + Sora -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Sora:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-ey-charcoal font-sora antialiased overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* ── Fade-up animation ── */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(36px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-up {
    animation: fadeUp 0.85s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
  }

  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.25s; }
  .delay-300 { animation-delay: 0.4s; }
  .delay-400 { animation-delay: 0.55s; }
  .delay-500 { animation-delay: 0.7s; }
  .delay-600 { animation-delay: 0.85s; }
  .delay-700 { animation-delay: 1.0s; }

  /* ── Pulse for badge dot ── */
  @keyframes badgePulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50%       { opacity: 0.45; transform: scale(1.35); }
  }

  .pulse-dot {
    animation: badgePulse 2.2s ease-in-out infinite;
  }

  /* ── Section labels ── */
  .section-label {
    display: inline-block;
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #E09F3C;
    margin-bottom: 12px;
  }

  /* ── Scroll-triggered reveal ── */
  .reveal {
    opacity: 0;
    transform: translateY(28px);
    transition: opacity 0.75s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.75s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
