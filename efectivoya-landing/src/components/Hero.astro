<style>
  /* â”€â”€ Layout â”€â”€ */
  .hero {
    position: relative;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #201F1F;
    padding: clamp(100px, 14vh, 140px) 24px clamp(60px, 8vh, 80px);
  }

  /* â”€â”€ Grid lines â”€â”€ */
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(224,159,60,0.048) 1px, transparent 1px),
      linear-gradient(90deg, rgba(224,159,60,0.048) 1px, transparent 1px);
    background-size: 80px 80px;
    background-position: center;
    pointer-events: none;
  }

  /* â”€â”€ Radial glow â”€â”€ */
  .hero-glow {
    position: absolute;
    top: 42%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: clamp(500px, 90vw, 1000px);
    height: clamp(500px, 90vw, 1000px);
    background: radial-gradient(circle at center,
      rgba(224,159,60,0.13) 0%,
      rgba(224,159,60,0.05) 38%,
      transparent 68%);
    pointer-events: none;
    border-radius: 50%;
  }

  /* â”€â”€ Corner accents â”€â”€ */
  .corner-accent {
    position: absolute;
    width: 300px;
    height: 300px;
    pointer-events: none;
  }

  .corner-tl {
    top: 0;
    left: 0;
    background: radial-gradient(circle at top left, rgba(224,159,60,0.07) 0%, transparent 60%);
  }

  .corner-br {
    bottom: 0;
    right: 0;
    background: radial-gradient(circle at bottom right, rgba(237,50,58,0.06) 0%, transparent 60%);
  }

  /* â”€â”€ Content â”€â”€ */
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 820px;
    width: 100%;
  }

  /* â”€â”€ Badge â”€â”€ */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 9px;
    padding: 8px 18px;
    background: rgba(224,159,60,0.08);
    border: 1px solid rgba(224,159,60,0.28);
    border-radius: 100px;
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: #E09F3C;
    margin-bottom: 30px;
  }

  .badge-dot {
    width: 7px;
    height: 7px;
    background: #E09F3C;
    border-radius: 50%;
    flex-shrink: 0;
  }

  /* â”€â”€ Title â”€â”€ */
  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(72px, 16vw, 168px);
    line-height: 0.88;
    letter-spacing: -0.01em;
    margin-bottom: 28px;
  }

  .title-white { color: #fff; }
  .title-red   { color: #ED323A; }

  /* â”€â”€ Tagline â”€â”€ */
  .hero-tagline {
    font-family: 'Sora', sans-serif;
    font-weight: 300;
    font-size: clamp(16px, 2.4vw, 20px);
    color: #B2B3B3;
    max-width: 500px;
    margin: 0 auto 42px;
    line-height: 1.68;
  }

  /* â”€â”€ CTAs â”€â”€ */
  .hero-ctas {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 14px;
    flex-wrap: wrap;
    margin-bottom: 32px;
  }

  .cta-ghost {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 26px;
    color: #B2B3B3;
    font-family: 'Sora', sans-serif;
    font-size: 15px;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid rgba(178,179,179,0.25);
    border-radius: 6px;
    transition: all 0.22s ease;
  }

  .cta-ghost:hover {
    color: #fff;
    border-color: rgba(255,255,255,0.4);
    background: rgba(255,255,255,0.04);
    transform: translateY(-2px);
  }

  .cta-ghost svg {
    transition: transform 0.22s ease;
  }

  .cta-ghost:hover svg {
    transform: translateY(3px);
  }

  /* â”€â”€ Store badges â”€â”€ */
  .store-badges {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 14px;
    margin-bottom: 36px;
  }

  .store-label {
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(178,179,179,0.55);
  }

  .store-buttons {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* â”€â”€ Shimmer border keyframe â”€â”€ */
  @keyframes badgeBeam {
    0%   { background-position: 220% center; }
    100% { background-position: -120% center; }
  }

  .store-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 11px;
    padding: 0;
    border: none;
    background: none;
    overflow: visible;
    transition: transform 0.2s ease;
  }

  .store-btn:hover {
    transform: translateY(-2px);
  }

  /* Thin border ring with sweeping light beam via CSS mask */
  .store-btn::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: 12px;
    padding: 1px;                /* controls border thickness */
    background: linear-gradient(
      90deg,
      rgba(224, 159, 60, 0.18)  0%,
      rgba(224, 159, 60, 0.18) 30%,
      rgba(224, 159, 60, 0.5)  42%,
      rgba(255, 232, 120, 0.85) 50%,
      rgba(224, 159, 60, 0.5)  58%,
      rgba(224, 159, 60, 0.18) 70%,
      rgba(224, 159, 60, 0.18) 100%
    );
    background-size: 300% 100%;
    animation: badgeBeam 3.5s ease-in-out infinite;
    /* Mask: show gradient ONLY in the 1px border ring */
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    z-index: 1;
  }

  .store-badge-img {
    height: 62px;
    width: auto;
    max-width: 200px;
    display: block;
    object-fit: contain;
    border-radius: 11px;
    position: relative;
    z-index: 0;
  }

  /* â”€â”€ Trust strip â”€â”€ */
  .hero-trust {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 18px;
    flex-wrap: wrap;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: 'Sora', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #B2B3B3;
  }

  .trust-sep {
    color: rgba(178,179,179,0.3);
    font-size: 18px;
    line-height: 1;
  }

  /* â”€â”€ Scroll indicator â”€â”€ */
  .scroll-indicator {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .scroll-line {
    width: 1px;
    height: 52px;
    background: linear-gradient(to bottom, rgba(224,159,60,0.7), transparent);
    margin: 0 auto;
    animation: scrollLine 2s ease-in-out infinite;
  }

  @keyframes scrollLine {
    0%   { opacity: 1; transform: scaleY(1) translateY(0); }
    100% { opacity: 0; transform: scaleY(0.3) translateY(100%); }
  }

  /* â”€â”€ Floating money â”€â”€ */
  .money-field {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
    z-index: 0;
  }

  .coin {
    position: absolute;
    bottom: -80px;
    font-family: 'Bebas Neue', sans-serif;
    opacity: 0;
    animation: coinFloat linear infinite;
    user-select: none;
    letter-spacing: 0.03em;
  }

  /* Billetes grandes â€” denominaciones reales */
  .coin-bill {
    font-size: clamp(20px, 3.2vw, 44px);
    color: #E09F3C;
    text-shadow:
      0 0 18px rgba(224, 159, 60, 0.75),
      0 0 40px rgba(224, 159, 60, 0.35),
      0 0 80px rgba(224, 159, 60, 0.15);
  }

  /* SÃ­mbolos medianos */
  .coin-md {
    font-size: clamp(16px, 2.4vw, 30px);
    color: #C8921E;
    text-shadow:
      0 0 12px rgba(200, 146, 30, 0.6),
      0 0 28px rgba(200, 146, 30, 0.25);
  }

  @keyframes coinFloat {
    0%   { opacity: 0;    transform: translateY(0)           rotate(-8deg); }
    6%   { opacity: 0.28; }
    85%  { opacity: 0.14; }
    100% { opacity: 0;    transform: translateY(-100vh)      rotate(var(--rot-end, 16deg)); }
  }

  /* â”€â”€ Speed badge â”€â”€ */
  .speed-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(237, 50, 58, 0.12);
    border: 1px solid rgba(237, 50, 58, 0.4);
    border-radius: 100px;
    font-family: 'Sora', sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: #ff6b70;
    margin-bottom: 28px;
    animation: speedPulse 2.8s ease-in-out infinite;
  }

  .speed-icon {
    font-size: 15px;
    animation: boltFlash 2.8s ease-in-out infinite;
  }

  @keyframes speedPulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(237, 50, 58, 0); }
    50%       { box-shadow: 0 0 0 6px rgba(237, 50, 58, 0); border-color: rgba(237, 50, 58, 0.7); }
  }

  @keyframes boltFlash {
    0%, 80%, 100% { opacity: 1; }
    90%           { opacity: 0.4; }
  }

  /* â”€â”€ Responsive â”€â”€ */
  @media (max-width: 480px) {
    .trust-sep     { display: none; }
    .hero-trust    { flex-direction: column; gap: 10px; }
    .scroll-indicator { display: none; }
  }
</style>
