---
import ButtonCTA from './ButtonCTA.astro';
---

<section id="que-es" class="hero">

  <!-- Background grid -->
  <div class="hero-grid" aria-hidden="true"></div>

  <!-- Radial glow -->
  <div class="hero-glow" aria-hidden="true"></div>

  <!-- Corner accents -->
  <div class="corner-accent corner-tl" aria-hidden="true"></div>
  <div class="corner-accent corner-br" aria-hidden="true"></div>

  <!-- ── 2-col inner ── -->
  <div class="hero-inner">

    <!-- LEFT: content -->
    <div class="hero-content">

      <!-- Badge -->
      <div class="hero-badge fade-up delay-100" role="presentation">
        <span class="badge-dot pulse-dot" aria-hidden="true"></span>
        <span>Billetera Digital&nbsp;·&nbsp;Perú</span>
      </div>

      <!-- Main title -->
      <h1 class="hero-title fade-up delay-200">
        <span class="title-white">EFECTIVO</span>
        <br aria-hidden="true" />
        <span class="title-red">YA</span>
      </h1>

      <!-- Tagline -->
      <p class="hero-tagline fade-up delay-300">
        Tu dinero al instante. Recarga tu billetera digital, retira a cualquiera de
        tus cuentas bancarias y gestiona tus finanzas sin complicaciones.
      </p>

      <!-- Speed badge -->
      <div class="speed-badge fade-up delay-350" role="presentation">
        <span class="speed-icon" aria-hidden="true">⚡</span>
        <span>Aprobación en segundos&nbsp;—&nbsp;no horas, no minutos</span>
      </div>

      <!-- CTA buttons -->
      <div class="hero-ctas fade-up delay-400">
        <ButtonCTA
          href="https://tu-app.com"
          text="Acceder a la App"
          target="_blank"
          variant="primary"
          size="lg"
        />
        <a href="#como-funciona" class="cta-ghost">
          Cómo funciona
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
            <path d="M8 2v12M3 9l5 5 5-5" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>

      <!-- Store badges -->
      <div class="store-badges fade-up delay-500">
        <span class="store-label">Disponible en</span>
        <div class="store-buttons">
          <a href="#" target="_blank" rel="noopener noreferrer" class="store-btn" aria-label="Descargar en App Store">
            <img src="/stores/appstore.png" alt="Descargar en App Store" class="store-badge-img" loading="lazy" />
          </a>
          <a href="#" target="_blank" rel="noopener noreferrer" class="store-btn" aria-label="Disponible en Google Play">
            <img src="/stores/playstore.png" alt="Disponible en Google Play" class="store-badge-img" loading="lazy" />
          </a>
        </div>
      </div>

      <!-- Trust strip -->
      <div class="hero-trust fade-up delay-600">
        <div class="trust-item">
          <svg width="14" height="14" viewBox="0 0 16 16" fill="none" aria-hidden="true">
            <path d="M8 1l1.5 4.5H15l-4 3 1.5 4.5L8 10.5 3.5 13 5 8.5l-4-3h5.5z" fill="#E09F3C"/>
          </svg>
          Sin costo de registro
        </div>
        <span class="trust-sep" aria-hidden="true">·</span>
        <div class="trust-item">
          <svg width="14" height="14" viewBox="0 0 16 16" fill="none" aria-hidden="true">
            <path d="M8 1l1.5 4.5H15l-4 3 1.5 4.5L8 10.5 3.5 13 5 8.5l-4-3h5.5z" fill="#E09F3C"/>
          </svg>
          Retiros sin comisión
        </div>
        <span class="trust-sep" aria-hidden="true">·</span>
        <div class="trust-item">
          <svg width="14" height="14" viewBox="0 0 16 16" fill="none" aria-hidden="true">
            <path d="M8 1l1.5 4.5H15l-4 3 1.5 4.5L8 10.5 3.5 13 5 8.5l-4-3h5.5z" fill="#E09F3C"/>
          </svg>
          Soporte humano 24/7
        </div>
      </div>

    </div>

    <!-- RIGHT: fan of bills -->
    <div class="hero-visual" aria-hidden="true">
      <div class="abanico">

        <!-- 6 billetes en abanico (izq → der, --b-rot de ±32°) -->
        <div class="billete billete-1" style="--b-rot:-32deg; --b-delay:0.05s">
          <div class="b-security"></div>
          <div class="b-watermark">200</div>
          <div class="b-body">
            <div class="b-top">
              <span class="b-currency">S/.</span>
              <span class="b-amount">200</span>
            </div>
            <span class="b-label">DOSCIENTOS SOLES</span>
          </div>
          <div class="b-strip"></div>
          <div class="b-border"></div>
        </div>

        <div class="billete billete-2" style="--b-rot:-19deg; --b-delay:0.10s">
          <div class="b-security"></div>
          <div class="b-watermark">50</div>
          <div class="b-body">
            <div class="b-top">
              <span class="b-currency">S/.</span>
              <span class="b-amount">50</span>
            </div>
            <span class="b-label">CINCUENTA SOLES</span>
          </div>
          <div class="b-strip"></div>
          <div class="b-border"></div>
        </div>

        <div class="billete billete-3" style="--b-rot:-6deg; --b-delay:0.15s">
          <div class="b-security"></div>
          <div class="b-watermark">100</div>
          <div class="b-body">
            <div class="b-top">
              <span class="b-currency">S/.</span>
              <span class="b-amount">100</span>
            </div>
            <span class="b-label">CIEN SOLES</span>
          </div>
          <div class="b-strip"></div>
          <div class="b-border"></div>
        </div>

        <div class="billete billete-4" style="--b-rot:7deg; --b-delay:0.20s">
          <div class="b-security"></div>
          <div class="b-watermark">20</div>
          <div class="b-body">
            <div class="b-top">
              <span class="b-currency">S/.</span>
              <span class="b-amount">20</span>
            </div>
            <span class="b-label">VEINTE SOLES</span>
          </div>
          <div class="b-strip"></div>
          <div class="b-border"></div>
        </div>

        <div class="billete billete-5" style="--b-rot:20deg; --b-delay:0.25s">
          <div class="b-security"></div>
          <div class="b-watermark">100</div>
          <div class="b-body">
            <div class="b-top">
              <span class="b-currency">S/.</span>
              <span class="b-amount">100</span>
            </div>
            <span class="b-label">CIEN SOLES</span>
          </div>
          <div class="b-strip"></div>
          <div class="b-border"></div>
        </div>

        <div class="billete billete-6" style="--b-rot:32deg; --b-delay:0.30s">
          <div class="b-security"></div>
          <div class="b-watermark">200</div>
          <div class="b-body">
            <div class="b-top">
              <span class="b-currency">S/.</span>
              <span class="b-amount">200</span>
            </div>
            <span class="b-label">DOSCIENTOS SOLES</span>
          </div>
          <div class="b-strip"></div>
          <div class="b-border"></div>
        </div>

        <!-- Glow debajo del abanico -->
        <div class="abanico-glow"></div>
      </div>
    </div>

  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator fade-up delay-600" aria-hidden="true">
    <div class="scroll-line"></div>
  </div>

</section>

<style>
  /* ────────────────────────────────────────────
     HERO — layout
  ──────────────────────────────────────────── */
  .hero {
    position: relative;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #201F1F;
    padding: clamp(100px, 14vh, 140px) clamp(20px, 4vw, 60px) clamp(60px, 8vh, 80px);
  }

  /* 2-col grid wrapper */
  .hero-inner {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1280px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
    align-items: center;
  }

  @media (max-width: 960px) {
    .hero-inner {
      grid-template-columns: 1fr;
      gap: 52px;
    }
  }

  /* ── Background elements ── */
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(224,159,60,0.048) 1px, transparent 1px),
      linear-gradient(90deg, rgba(224,159,60,0.048) 1px, transparent 1px);
    background-size: 80px 80px;
    background-position: center;
    pointer-events: none;
  }

  .hero-glow {
    position: absolute;
    top: 42%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: clamp(500px, 90vw, 1000px);
    height: clamp(500px, 90vw, 1000px);
    background: radial-gradient(circle at center,
      rgba(224,159,60,0.13) 0%,
      rgba(224,159,60,0.05) 38%,
      transparent 68%);
    pointer-events: none;
    border-radius: 50%;
  }

  .corner-accent {
    position: absolute;
    width: 300px;
    height: 300px;
    pointer-events: none;
  }

  .corner-tl {
    top: 0; left: 0;
    background: radial-gradient(circle at top left, rgba(224,159,60,0.07) 0%, transparent 60%);
  }

  .corner-br {
    bottom: 0; right: 0;
    background: radial-gradient(circle at bottom right, rgba(237,50,58,0.06) 0%, transparent 60%);
  }

  /* ────────────────────────────────────────────
     LEFT column — content
  ──────────────────────────────────────────── */
  .hero-content {
    text-align: left;
    max-width: 560px;
  }

  @media (max-width: 960px) {
    .hero-content {
      text-align: center;
      max-width: 820px;
      margin: 0 auto;
    }
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 9px;
    padding: 8px 18px;
    background: rgba(224,159,60,0.08);
    border: 1px solid rgba(224,159,60,0.28);
    border-radius: 100px;
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: #E09F3C;
    margin-bottom: 28px;
  }

  .badge-dot {
    width: 7px;
    height: 7px;
    background: #E09F3C;
    border-radius: 50%;
    flex-shrink: 0;
  }

  /* Title */
  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(72px, 12vw, 148px);
    line-height: 0.88;
    letter-spacing: -0.01em;
    margin-bottom: 24px;
  }

  .title-white { color: #fff; }
  .title-red   { color: #ED323A; }

  /* Tagline */
  .hero-tagline {
    font-family: 'Sora', sans-serif;
    font-weight: 300;
    font-size: clamp(15px, 1.8vw, 18px);
    color: #B2B3B3;
    max-width: 480px;
    margin: 0 0 36px;
    line-height: 1.68;
  }

  @media (max-width: 960px) {
    .hero-tagline { margin: 0 auto 36px; }
  }

  /* Speed badge */
  .speed-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(237, 50, 58, 0.12);
    border: 1px solid rgba(237, 50, 58, 0.4);
    border-radius: 100px;
    font-family: 'Sora', sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: #ff6b70;
    margin-bottom: 28px;
    animation: speedPulse 2.8s ease-in-out infinite;
  }

  .speed-icon {
    font-size: 15px;
    animation: boltFlash 2.8s ease-in-out infinite;
  }

  @keyframes speedPulse {
    0%, 100% { border-color: rgba(237, 50, 58, 0.4); }
    50%       { border-color: rgba(237, 50, 58, 0.7); }
  }

  @keyframes boltFlash {
    0%, 80%, 100% { opacity: 1; }
    90%           { opacity: 0.4; }
  }

  /* CTAs */
  .hero-ctas {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 14px;
    flex-wrap: wrap;
    margin-bottom: 28px;
  }

  @media (max-width: 960px) {
    .hero-ctas { justify-content: center; }
  }

  .cta-ghost {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 26px;
    color: #B2B3B3;
    font-family: 'Sora', sans-serif;
    font-size: 15px;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid rgba(178,179,179,0.25);
    border-radius: 6px;
    transition: all 0.22s ease;
  }

  .cta-ghost:hover {
    color: #fff;
    border-color: rgba(255,255,255,0.4);
    background: rgba(255,255,255,0.04);
    transform: translateY(-2px);
  }

  .cta-ghost svg { transition: transform 0.22s ease; }
  .cta-ghost:hover svg { transform: translateY(3px); }

  /* Store badges */
  .store-badges {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 32px;
  }

  @media (max-width: 960px) {
    .store-badges { align-items: center; }
  }

  .store-label {
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(178,179,179,0.55);
  }

  .store-buttons {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  @keyframes badgeBeam {
    0%   { background-position: 220% center; }
    100% { background-position: -120% center; }
  }

  .store-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 11px;
    padding: 0;
    border: none;
    background: none;
    overflow: visible;
    transition: transform 0.2s ease;
  }

  .store-btn:hover { transform: translateY(-2px); }

  .store-btn::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: 12px;
    padding: 1px;
    background: linear-gradient(
      90deg,
      rgba(224, 159, 60, 0.18)  0%,
      rgba(224, 159, 60, 0.18) 30%,
      rgba(224, 159, 60, 0.5)  42%,
      rgba(255, 232, 120, 0.85) 50%,
      rgba(224, 159, 60, 0.5)  58%,
      rgba(224, 159, 60, 0.18) 70%,
      rgba(224, 159, 60, 0.18) 100%
    );
    background-size: 300% 100%;
    animation: badgeBeam 3.5s ease-in-out infinite;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    z-index: 1;
  }

  .store-badge-img {
    height: 62px;
    width: auto;
    max-width: 200px;
    display: block;
    object-fit: contain;
    border-radius: 11px;
    position: relative;
    z-index: 0;
  }

  /* Trust strip */
  .hero-trust {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 16px;
    flex-wrap: wrap;
  }

  @media (max-width: 960px) {
    .hero-trust { justify-content: center; }
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: 'Sora', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #B2B3B3;
  }

  .trust-sep {
    color: rgba(178,179,179,0.3);
    font-size: 18px;
    line-height: 1;
  }

  /* ────────────────────────────────────────────
     RIGHT column — ABANICO de billetes
  ──────────────────────────────────────────── */
  .hero-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 0 60px;
  }

  @media (max-width: 960px) {
    .hero-visual {
      padding: 0 0 20px;
      order: 2; /* siempre debajo del contenido en mobile */
    }
  }

  /* Contenedor del abanico — punto de pivote en el centro-inferior */
  .abanico {
    position: relative;
    width: clamp(300px, 46vw, 540px);
    height: clamp(180px, 28vw, 320px);
    animation: fanFloat 6s ease-in-out infinite;
    animation-delay: 1.2s;
  }

  @keyframes fanFloat {
    0%, 100% { transform: translateY(0); }
    50%       { transform: translateY(-12px); }
  }

  /* ── Billete base ── */
  .billete {
    position: absolute;
    width: clamp(170px, 28vw, 310px);
    height: clamp(85px, 14vw, 155px);
    border-radius: 8px;
    bottom: 20px;
    /* Centrar horizontalmente: left 50% - mitad del ancho */
    left: calc(50% - clamp(85px, 14vw, 155px));
    transform-origin: center bottom;
    transform: rotate(var(--b-rot, 0deg));
    animation: billFanIn 0.9s cubic-bezier(0.16, 1, 0.3, 1) var(--b-delay, 0s) both;
    overflow: hidden;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.6),
      0 2px 8px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255,255,255,0.06);
  }

  @keyframes billFanIn {
    from {
      transform: rotate(0deg);
      opacity: 0;
    }
    to {
      transform: rotate(var(--b-rot, 0deg));
      opacity: 1;
    }
  }

  /* Colores inspirados en billetes peruanos */
  .billete-1 { background: linear-gradient(145deg, #3E0C0C 0%, #6A1A1A 60%, #3E0C0C 100%); z-index: 1; }  /* S/. 200 — vino */
  .billete-2 { background: linear-gradient(145deg, #08263C 0%, #0C4468 60%, #08263C 100%); z-index: 2; }  /* S/. 50  — azul */
  .billete-3 { background: linear-gradient(145deg, #0A2F18 0%, #145C2A 60%, #0A2F18 100%); z-index: 3; }  /* S/. 100 — verde */
  .billete-4 { background: linear-gradient(145deg, #3A1500 0%, #6B2A00 60%, #3A1500 100%); z-index: 4; }  /* S/. 20  — naranja */
  .billete-5 { background: linear-gradient(145deg, #0A2F18 0%, #145C2A 60%, #0A2F18 100%); z-index: 5; }  /* S/. 100 — verde */
  .billete-6 { background: linear-gradient(145deg, #3E0C0C 0%, #6A1A1A 60%, #3E0C0C 100%); z-index: 6; }  /* S/. 200 — vino */

  /* Patrón de seguridad (líneas diagonales) */
  .b-security {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      -50deg,
      transparent,
      transparent 5px,
      rgba(255,255,255,0.018) 5px,
      rgba(255,255,255,0.018) 6px
    );
    pointer-events: none;
  }

  /* Número fantasma de fondo (watermark) */
  .b-watermark {
    position: absolute;
    right: 6px;
    bottom: -8px;
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(60px, 9vw, 110px);
    line-height: 1;
    color: rgba(255,255,255,0.04);
    user-select: none;
    pointer-events: none;
    letter-spacing: -0.02em;
  }

  /* Contenido central del billete */
  .b-body {
    position: absolute;
    top: 50%;
    left: clamp(12px, 1.8vw, 22px);
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .b-top {
    display: flex;
    align-items: baseline;
    gap: 3px;
  }

  .b-currency {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(13px, 2vw, 22px);
    color: rgba(224,159,60,0.85);
    line-height: 1;
  }

  .b-amount {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(28px, 5vw, 58px);
    color: #E09F3C;
    line-height: 1;
    letter-spacing: -0.01em;
    text-shadow:
      0 0 14px rgba(224,159,60,0.55),
      0 0 32px rgba(224,159,60,0.25);
  }

  .b-label {
    font-family: 'Sora', sans-serif;
    font-size: clamp(5px, 0.7vw, 9px);
    font-weight: 700;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: rgba(224,159,60,0.4);
  }

  /* Banda de seguridad vertical (como los billetes reales) */
  .b-strip {
    position: absolute;
    right: clamp(22px, 4vw, 48px);
    top: 12%;
    bottom: 12%;
    width: 3px;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(224,159,60,0.55) 20%,
      rgba(255,220,100,0.8) 50%,
      rgba(224,159,60,0.55) 80%,
      transparent 100%
    );
    border-radius: 2px;
    pointer-events: none;
  }

  /* Borde interior decorativo */
  .b-border {
    position: absolute;
    inset: 5px;
    border: 1px solid rgba(224,159,60,0.16);
    border-radius: 4px;
    pointer-events: none;
  }

  /* Glow debajo del abanico */
  .abanico-glow {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 70%;
    height: 60px;
    background: radial-gradient(
      ellipse at center bottom,
      rgba(224,159,60,0.22) 0%,
      transparent 70%
    );
    pointer-events: none;
    z-index: 0;
  }

  /* ────────────────────────────────────────────
     Scroll indicator
  ──────────────────────────────────────────── */
  .scroll-indicator {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .scroll-line {
    width: 1px;
    height: 52px;
    background: linear-gradient(to bottom, rgba(224,159,60,0.7), transparent);
    margin: 0 auto;
    animation: scrollLine 2s ease-in-out infinite;
  }

  @keyframes scrollLine {
    0%   { opacity: 1; transform: scaleY(1) translateY(0); }
    100% { opacity: 0; transform: scaleY(0.3) translateY(100%); }
  }

  /* ────────────────────────────────────────────
     Responsive
  ──────────────────────────────────────────── */
  @media (max-width: 480px) {
    .trust-sep        { display: none; }
    .hero-trust       { flex-direction: column; gap: 8px; }
    .scroll-indicator { display: none; }

    .billete {
      width: 150px;
      height: 75px;
      left: calc(50% - 75px);
