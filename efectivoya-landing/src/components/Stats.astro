---

<section class="stats-section" aria-label="Estadísticas">
  <div class="stats-container">

    <!-- Stat 1 -->
    <div class="stat-item reveal">
      <div class="stat-number">
        <span
          class="counter"
          data-count="3000"
          data-suffix="+"
          data-prefix=""
          aria-label="Más de 3000"
        >0</span>
      </div>
      <div class="stat-meta">
        <div class="stat-label">Usuarios activos</div>
        <div class="stat-sub">y creciendo cada día</div>
      </div>
    </div>

    <div class="stat-divider" aria-hidden="true"></div>

    <!-- Stat 2 -->
    <div class="stat-item reveal" style="transition-delay: 0.12s">
      <div class="stat-number">
        <span
          class="counter"
          data-count="4"
          data-suffix=""
          data-prefix=""
          aria-label="4"
        >0</span>
      </div>
      <div class="stat-meta">
        <div class="stat-label">Bancos compatibles</div>
        <div class="stat-sub">BCP · Interbank · Scotiabank · BBVA</div>
      </div>
    </div>

    <div class="stat-divider" aria-hidden="true"></div>

    <!-- Stat 3 -->
    <div class="stat-item reveal" style="transition-delay: 0.24s">
      <div class="stat-number stat-number--prefix">
        <span class="stat-currency">S/.</span>
        <span
          class="counter"
          data-count="0"
          data-suffix=""
          data-prefix=""
          aria-label="Cero soles"
        >0</span>
      </div>
      <div class="stat-meta">
        <div class="stat-label">Comisión en retiros</div>
        <div class="stat-sub">retira sin pagar de más</div>
      </div>
    </div>

  </div>
</section>

<style>
  .stats-section {
    background: #1A1919;
    padding: clamp(48px, 7vw, 72px) 24px;
  }

  .stats-container {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
  }

  @media (min-width: 640px) {
    .stats-container {
      grid-template-columns: 1fr auto 1fr auto 1fr;
      align-items: center;
    }
  }

  /* ── Divider ── */
  .stat-divider {
    display: none;
  }

  @media (min-width: 640px) {
    .stat-divider {
      display: block;
      width: 1px;
      height: 70px;
      background: rgba(224,159,60,0.14);
      margin: 0 40px;
    }
  }

  /* ── Stat item ── */
  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 32px 16px;
    gap: 10px;
  }

  @media (min-width: 640px) {
    .stat-item {
      padding: 16px;
    }
  }

  /* Horizontal divider on mobile */
  .stat-item + .stat-item {
    border-top: 1px solid rgba(224,159,60,0.1);
  }

  @media (min-width: 640px) {
    .stat-item + .stat-item {
      border-top: none;
    }
  }

  /* ── Number ── */
  .stat-number {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(52px, 8vw, 72px);
    line-height: 1;
    color: #E09F3C;
    letter-spacing: -0.01em;
    font-variant-numeric: tabular-nums;
    display: flex;
    align-items: baseline;
    gap: 2px;
  }

  .stat-currency {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(28px, 4vw, 38px);
    color: #E09F3C;
    margin-right: 4px;
    letter-spacing: 0.02em;
  }

  /* ── Labels ── */
  .stat-meta {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .stat-label {
    font-family: 'Sora', sans-serif;
    font-size: clamp(14px, 2vw, 16px);
    font-weight: 600;
    color: #fff;
  }

  .stat-sub {
    font-family: 'Sora', sans-serif;
    font-size: 12px;
    font-weight: 400;
    color: #B2B3B3;
    letter-spacing: 0.01em;
  }

  /* ── Counter animation ── */
  .counter {
    display: inline-block;
    font-variant-numeric: tabular-nums;
  }
</style>

<script>
  function animateCounter(el: Element) {
    const end = parseInt((el as HTMLElement).dataset.count ?? '0');
    const suffix = (el as HTMLElement).dataset.suffix ?? '';
    const duration = 1800;
    const start = performance.now();

    function update(now: number) {
      const elapsed = now - start;
      const progress = Math.min(elapsed / duration, 1);
      // Ease out cubic
      const eased = 1 - Math.pow(1 - progress, 3);
      const current = Math.round(eased * end);

      el.textContent = (end >= 1000
        ? current.toLocaleString('es-PE')
        : String(current)) + suffix;

      if (progress < 1) requestAnimationFrame(update);
    }

    requestAnimationFrame(update);
  }

  const counterObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCounter(entry.target);
          counterObserver.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.5 }
  );

  document.querySelectorAll('.counter').forEach(el => counterObserver.observe(el));

  // Scroll-triggered reveal
  const revealObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.15 }
  );

  document.querySelectorAll('.reveal').forEach(el => revealObserver.observe(el));
</script>
