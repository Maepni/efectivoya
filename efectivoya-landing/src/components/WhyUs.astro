---
// No props

const features = [
  {
    icon: `<svg width="26" height="26" viewBox="0 0 26 26" fill="none"><path d="M13 2L4 6.5v7C4 18.6 8 22.9 13 24c5-1.1 9-5.4 9-10.5v-7L13 2z" stroke="#E09F3C" stroke-width="1.8" stroke-linejoin="round"/><path d="M9 13l3 3 5-5" stroke="#E09F3C" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
    title: 'Seguridad total',
    desc: 'Verificación de bouchers, tokens JWT y cifrado en todas las comunicaciones.',
  },
  {
    icon: `<svg width="26" height="26" viewBox="0 0 26 26" fill="none"><circle cx="13" cy="13" r="10" stroke="#E09F3C" stroke-width="1.8"/><path d="M13 8v5l3 3" stroke="#E09F3C" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
    title: 'Aprobación al instante',
    desc: 'Revisamos tu boucher y acreditamos el saldo al instante — en segundos, no horas.',
  },
  {
    icon: `<svg width="26" height="26" viewBox="0 0 26 26" fill="none"><rect x="2" y="6" width="22" height="14" rx="3" stroke="#E09F3C" stroke-width="1.8"/><path d="M2 11h22" stroke="#E09F3C" stroke-width="1.8"/><circle cx="7" cy="16.5" r="1.5" fill="#E09F3C"/></svg>`,
    title: 'Sin comisión en retiros',
    desc: 'Todo lo que retiras llega completo a tu cuenta. Sin cobros ocultos ni cargos extras.',
  },
  {
    icon: `<svg width="26" height="26" viewBox="0 0 26 26" fill="none"><path d="M3 19V7a2 2 0 012-2h16a2 2 0 012 2v8a2 2 0 01-2 2H7l-4 4z" stroke="#E09F3C" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><path d="M9 10h8M9 14h5" stroke="#E09F3C" stroke-width="1.5" stroke-linecap="round"/></svg>`,
    title: 'Soporte humano',
    desc: 'Chat en tiempo real con agentes reales. Sin bots, sin menús infinitos, sin esperas.',
  },
  {
    icon: `<svg width="26" height="26" viewBox="0 0 26 26" fill="none"><path d="M18 4H8a3 3 0 00-3 3v12a3 3 0 003 3h10a3 3 0 003-3V7a3 3 0 00-3-3z" stroke="#E09F3C" stroke-width="1.8"/><path d="M8 10h10M8 14h7M8 18h5" stroke="#E09F3C" stroke-width="1.4" stroke-linecap="round"/></svg>`,
    title: 'Comprobantes al instante',
    desc: 'Cada operación genera un comprobante PDF descargable en el momento.',
  },
  {
    icon: `<svg width="26" height="26" viewBox="0 0 26 26" fill="none"><circle cx="13" cy="13" r="10" stroke="#E09F3C" stroke-width="1.8"/><path d="M13 7v6h4" stroke="#E09F3C" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><path d="M7 19.5l2-2" stroke="#E09F3C" stroke-width="1.5" stroke-linecap="round"/></svg>`,
    title: 'Disponible 24/7',
    desc: 'Opera en cualquier momento. La plataforma está siempre activa, sin interrupciones.',
  },
];
---

<section class="whyus-section">
  <div class="whyus-container">

    <div class="whyus-header reveal">
      <span class="section-label">Por qué elegirnos</span>
      <h2 class="whyus-title">¿Por qué EfectivoYa?</h2>
      <p class="whyus-subtitle">
        Construido para peruanos, con los estándares de seguridad y transparencia
        que mereces en cada transacción
      </p>
    </div>

    <div class="features-grid">
      {features.map((feat, i) => (
        <div class="feature-card reveal" style={`transition-delay: ${(i % 3) * 0.1}s`}>
          <div class="feature-icon" aria-hidden="true" set:html={feat.icon} />
          <div class="feature-content">
            <h3 class="feature-title">{feat.title}</h3>
            <p class="feature-desc">{feat.desc}</p>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  .whyus-section {
    background: #E5E5E5;
    padding: clamp(64px, 10vw, 100px) 24px;
  }

  .whyus-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* ── Header ── */
  .whyus-header {
    text-align: center;
    margin-bottom: clamp(44px, 7vw, 64px);
  }

  .whyus-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(40px, 7vw, 68px);
    color: #201F1F;
    line-height: 1;
    margin-bottom: 16px;
  }

  .whyus-subtitle {
    font-family: 'Sora', sans-serif;
    font-size: clamp(15px, 1.8vw, 17px);
    font-weight: 400;
    color: #4a4a4a;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.65;
  }

  .whyus-header .section-label { color: #E09F3C; }

  /* ── Features grid ── */
  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
  }

  /* ── Feature card ── */
  .feature-card {
    display: flex;
    gap: 16px;
    align-items: flex-start;
    background: rgba(255,255,255,0.65);
    border: 1px solid rgba(0,0,0,0.06);
    border-radius: 12px;
    padding: 22px 20px;
    transition: background 0.22s ease, transform 0.22s cubic-bezier(0.16, 1, 0.3, 1), box-shadow 0.22s ease;
  }

  .feature-card:hover {
    background: #fff;
    transform: translateY(-3px);
    box-shadow: 0 10px 32px rgba(32,31,31,0.1);
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(224,159,60,0.1);
    border-radius: 10px;
  }

  .feature-content {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .feature-title {
    font-family: 'Sora', sans-serif;
    font-size: 15.5px;
    font-weight: 700;
    color: #201F1F;
    line-height: 1.3;
  }

  .feature-desc {
    font-family: 'Sora', sans-serif;
    font-size: 13.5px;
    font-weight: 400;
    color: #555;
    line-height: 1.6;
  }
</style>
