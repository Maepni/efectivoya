---
// No props

const banks = [
  {
    name: 'BCP',
    fullName: 'Banco de Crédito del Perú',
    slug: 'bcp',
    color: '#005DAA',
  },
  {
    name: 'Interbank',
    fullName: 'Interbank',
    slug: 'interbank',
    color: '#00993B',
  },
  {
    name: 'Scotiabank',
    fullName: 'Scotiabank Perú',
    slug: 'scotiabank',
    color: '#EC111A',
  },
  {
    name: 'BBVA',
    fullName: 'BBVA Continental',
    slug: 'bbva',
    color: '#00479B',
  },
];
---

<section id="bancos" class="banks-section">
  <div class="banks-container">

    <div class="banks-header reveal">
      <span class="section-label">Compatibilidad</span>
      <h2 class="banks-title">Bancos compatibles</h2>
      <p class="banks-subtitle">Transferencias 100% verificadas con los principales bancos del Perú</p>
    </div>

    <div class="banks-grid">
      {banks.map((bank, i) => (
        <div
          class="bank-card reveal"
          style={`transition-delay: ${i * 0.1}s`}
          role="img"
          aria-label={bank.fullName}
        >
          <!-- Card header with real logo -->
          <div class="bank-header" aria-hidden="true">
            <div class="bank-color-strip" style={`background: ${bank.color};`}></div>
            <img
              src={`/banks/${bank.slug}.png`}
              alt={bank.name}
              class="bank-logo-img"
              loading="lazy"
            />
          </div>

          <!-- Card body -->
          <div class="bank-body">
            <div class="bank-name">{bank.name}</div>
            <div class="bank-full">{bank.fullName}</div>
            <div class="bank-check">
              <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
                <path d="M2.5 7l3 3 6-6" stroke="#E09F3C" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Verificado</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Note below -->
    <p class="banks-note reveal">
      Próximamente más bancos y métodos de pago
    </p>

  </div>
</section>

<style>
  .banks-section {
    background: #1A1919;
    padding: clamp(64px, 10vw, 100px) 24px;
  }

  .banks-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* ── Header ── */
  .banks-header {
    text-align: center;
    margin-bottom: clamp(44px, 6vw, 64px);
  }

  .banks-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(40px, 7vw, 68px);
    color: #fff;
    line-height: 1;
    margin-bottom: 14px;
  }

  .banks-subtitle {
    font-family: 'Sora', sans-serif;
    font-size: clamp(14px, 1.8vw, 17px);
    font-weight: 400;
    color: #B2B3B3;
    max-width: 420px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Grid ── */
  .banks-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 28px;
  }

  @media (min-width: 768px) {
    .banks-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 24px;
    }
  }

  /* ── Card ── */
  .bank-card {
    background: #fff;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 6px 28px rgba(104,68,60,0.22);
    transition: transform 0.25s cubic-bezier(0.16, 1, 0.3, 1), box-shadow 0.25s ease;
    cursor: default;
  }

  .bank-card:hover {
    transform: scale(1.04) translateY(-4px);
    box-shadow: 0 14px 40px rgba(104,68,60,0.38);
  }

  /* ── Card header with real logo ── */
  .bank-header {
    position: relative;
    height: 100px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 18px 20px 14px;
  }

  /* Thin brand-color strip at the top */
  .bank-color-strip {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
  }

  .bank-logo-img {
    max-width: 120px;
    max-height: 52px;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }

  /* ── Card body ── */
  .bank-body {
    padding: 14px 16px 16px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .bank-name {
    font-family: 'Sora', sans-serif;
    font-size: 16px;
    font-weight: 700;
    color: #201F1F;
    line-height: 1.2;
  }

  .bank-full {
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 400;
    color: #888;
    line-height: 1.3;
    margin-bottom: 6px;
  }

  .bank-check {
    display: flex;
    align-items: center;
    gap: 5px;
    font-family: 'Sora', sans-serif;
    font-size: 11px;
    font-weight: 600;
    color: #E09F3C;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  /* ── Note ── */
  .banks-note {
    text-align: center;
    font-family: 'Sora', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: rgba(178,179,179,0.5);
    letter-spacing: 0.03em;
  }
</style>
